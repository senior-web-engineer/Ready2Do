@model LoginViewModel
<body class="grey lighten-3">
    <!--header start-->
    <header class="tt-nav grey lighten-5">
        <div class="header-sticky">
            <div class="container">
                <div class="menuzord">
                    <a class="logo-brand">
                        <img class="retina" src="~/img/logo.png" alt="" />
                    </a>
                </div>
            </div>
        </div>
    </header>

    <section class="">
        <div class="container">
            <div class="row">
                <div class="col s10 m8 xl6 offset-s1 offset-m2 offset-xl3 login-box white">
                    <h3 class="title center-align blue-text text-lighten-1">Accedi a PGoGo</h3>
                    <form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="row">
                            <div class="input-field col s10 offset-s1">
                                <input type="text" required="required" asp-for="Username" />
                                <label asp-for="Username"></label>
                                <span asp-validation-for="Username"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s10 offset-s1">
                                <input type="password" required="required" asp-for="Password" />
                                <label asp-for="Password"></label>
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="col s10 offset-s1">
                                <a asp-action="PasswordRecovery" class="password-recovery right grey-text text-darken-1"><b>Password dimenticata?</b></a>
                            </div>
                        </div>
                        <div class="row">
                            @Html.Partial("_ValidationSummary")
                            <div class="col col s10 offset-s1 center-align">
                                <button class="login-button btn waves-effect blue lighten-1" name="button" value="login"><b>Login</b></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col s10 offset-s1 center-align">
                                <span>Non hai ancora un account? </span>
                                <a href="@ViewBag.RegistrationUrl"  class="blue-text text-lighten-1 register-link"><b>Registrati</b></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
