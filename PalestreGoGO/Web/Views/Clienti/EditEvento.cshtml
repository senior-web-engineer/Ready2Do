@model EventoViewModel;
@{
    Layout = "~/Views/Shared/_LayoutClienti.cshtml";
}
<head>
    @section Header{
        <link href="~/azure.fine-uploader/fine-uploader-new.min.css" rel="stylesheet">
        @*<link href="~/css/solved-by-flexbox-grid.css" rel="stylesheet">*@
        @*<link href="~/pickadate.js-3.5.6/lib/compressed/themes/default.css" rel="stylesheet" />
        <link href="~/pickadate.js-3.5.6/lib/compressed/themes/default.date.css" rel="stylesheet" />
