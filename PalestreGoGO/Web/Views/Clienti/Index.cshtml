            <a target="_blank" href="@Html.Raw(Model.ExternalGoogleMapUrl)">
                <img class="responsive-img" src="@Model.GoogleStaticMapUrl" />
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col s10 l8 offset-s1 offset-l2">
            <p>@Model.Indrizzo</p>
        </div>
    </div>
</section>

