<section id="descCliente" class="padding-top-10 mt-10">
    <div class="row">
        <div class="col s10 l8 offset-s1 offset-l2">
            <h3>@Model.Nome</h3>
        </div>
    </div>
    <div class="row">
        <div class="col s6 l5 offset-s1 offset-l2">
            <p>@Model.Descrizione</p>
        </div>
        <div class="col s4 l3">
            <div class="r2d-box-info-right" style="display:flex; flex-direction:column">
                @if (Model.OrarioApertura != null)
                {
                    <div><h6>Orario Apertura</h6></div>
                <div>Len-Ven: @Model.OrarioApertura.LunVen?.AsString()</div>
                <div>Sabato: @Model.OrarioApertura.Sabato?.AsString()</div>
                <div>Domenica: @Model.OrarioApertura.Domenica?.AsString()</div>
                <div class="divider"></div>
                }
                <div>Telefono: @Model.NumTelefono</div>
                <div>Email: @Model.Email</div>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col s10 l8 offset-s1 offset-l2">
        <div class="divider"></div>
    </div>
</div>

<section id="slideshow" class="r2d-slideshow">
    <div class="row">
        <div class="col s10 l8 offset-s1 offset-l2">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @foreach (var i in Model.Images.OrderBy(img=>img.Ordinamento))
                    {
                        <div class="swiper-slide center">
                            <img class="r2d-swiper-image center" src="@i.Url" alt="@i.Alt">
                        </div>
                    }
                </div>
                <!-- Add Pagination -->
                <div class="swiper-pagination"></div>
                <!-- Add Arrows -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col s10 l8 offset-s1 offset-l2">
        <div class="divider"></div>
    </div>
</div>


<section id="calendars">
    <div class="row">
        <div class="col s10 l8 offset-s1 offset-l2">
            <h6 class="r2d-section-title">I nostri corsi</h6>
        </div>
    </div>
    <div class="row">
        <div class="col s10 l8 offset-s1 offset-l2">
            @if (Model.Locations != null && Model.Locations.Count > 0)
            {
                <!-- TABS SALE-->
                <ul id="tabsContainer" class="tabs tabs-fixed-width">
                    @for (int i = 0; i < Model.Locations.Count; i++)
                    {
                        <li class="tab col s3 @(i==0?"active":"")">
                            <a href='@(String.Format("#calendar-{0}",Model.Locations[i].Id))'>@Model.Locations[i].Nome</a>
                        </li>
                    }
                </ul>
                <!-- Un DIV per ciascuna sala con il calendario per quella sala -->
                @foreach (var s in Model.Locations)
                {
                    <div id="@(String.Format("calendar-container-{0}",s.Id))" class="r2d-calendar-container">
                        <div id='@(String.Format("calendar-{0}",s.Id))'>

                        </div>
                    </div>
                }
            }
            else
            {
                <h4><a asp-controller="Clienti" asp-action="SalaNew">Configurare</a> almeno una Sala per poter iniziare ad inserire gli eventi.</h4>
            }
        </div>
    </div>
</section>

<div class="row">
    <div class="col s10 l8 offset-s1 offset-l2">
        <div class="divider"></div>
    </div>
</div>

<section id="whereare">
    <div class="row">
