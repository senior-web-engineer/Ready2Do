@model TipologieLezioniViewModel;

@{
    ViewData["Title"] = "Lezione";
    Layout = "_LayoutClienti";
}


<!-- Non dovrebbe esserci NavBar in questa pagina-->
@Html.Partial("_MenuCliente", ViewData["IdCliente"])
<!-- Primo banner pubblicitario -->
<section id="banner1">
    <div class="container">
        <div class="row center-align">
            <div class="adsbanner_container">
                <img src="~/img/placeholders/google/leaderboard_728x90.png" />
            </div>
        </div>
    </div>
</section>

<section id="editLezione">
    <div class="container">
        <form asp-action="LezioneSave" method="post" id="formEditLezione">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col s10 offset-s1 center-align">
                    <h6>Edit Lezione</h6>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    <input type="text" asp-for="Nome" />
                    <label asp-for="Nome"></label>
                    <span asp-validation-for="Nome"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    <input type="text" asp-for="Descrizione" />
                    <label asp-for="Descrizione"></label>
                    <span asp-validation-for="Descrizione"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    <input type="text" asp-for="Durata" />
                    <label asp-for="Durata"></label>
                    <span asp-validation-for="Durata"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    <input type="text" asp-for="MaxPartecipanti" />
                    <label asp-for="MaxPartecipanti"></label>
                    <span asp-validation-for="MaxPartecipanti"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    <input type="text" asp-for="LimiteCancellazioneMinuti" />
                    <label asp-for="LimiteCancellazioneMinuti"></label>
                    <span asp-validation-for="LimiteCancellazioneMinuti"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    <input type="text" asp-for="Livello" />
                    <label asp-for="Livello"></label>
                    <span asp-validation-for="Livello"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s10 offset-s1 center">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>