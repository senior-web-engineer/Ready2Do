@model List<LocationViewModel>
@{
    ViewData["Title"] = "Sale";
    Layout = "_LayoutClienti";
}
@Html.Partial("_MenuCliente", ViewData["IdCliente"])
<div class="container">
    <div class="row">
        <div class="col s8">
            <span class="section-header">
                Sale
            </span>
        </div>
        <div class="col s4">
            <a class="btn-floating btn-large waves-effect waves-light red" asp-action="SalaNew" data-position="bottom" data-tooltip="Aggiungi Sala" title="Aggiungi Sala"><i class="material-icons">add</i></a>
        </div>
    </div>
    <div class="row">


        @if ((Model == null) || (Model.Count == 0))
        {
            <span>Nessuna lezione inserita.</span>
        }
        else
        {
            <table class="stripped responsive-table">
                <thead>
                    <tr>
                        <th>Sala</th>
                        <th>Descrizione</th>
                        <th>Capienza</th>
                        <th class="center">Azioni</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var s in Model)
                    {
                    <tr>
                        <td data-id-sala="@s.Id">@s.Nome</td>
                        <td>@s.Descrizione</td>
                        <td>@s.CapienzaMax</td>
                        <td class="center">
                            <div>
                                <a class="waves-effect waves-light btn" asp-action="Sala" asp-route-id="@s.Id"><i class="medium material-icons">edit</i></a>
                                <a class="waves-effect waves-light btn" asp-action="SalaDelete" asp-route-id="@s.Id"><i class="medium material-icons">delete</i></a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            //var tooltipOptions =
            var elems = document.querySelectorAll('.tooltipped');
            var instances = M.Tooltip.init(elems);
        });
    </script>
}
