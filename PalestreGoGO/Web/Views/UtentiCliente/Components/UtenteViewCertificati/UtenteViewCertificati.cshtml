@model UtenteViewCertificatiViewModel

<div id="viewAbbonamentiContainer" class="row">
    @if (Model != null && Model.Certificati != null && Model.Certificati.Count > 0)
    {
        <ul class="collapsible">
            @foreach (var a in Model.Certificati)
            {
                <li>
                    <div class="collapsible-header">
                        <span class="r2d-value">Scadenza: @a.DataScadenza</span>
                    </div>
                    <div class="collapsible-body">
                        <div class="row">
                            <div class="col s1 offset-s1">
                                <span class="r2d-label">Presentato il:</span>
                            </div>
                            <div class="col s2">
                                <span class="r2d-value">@a.DataPresentazione</span>
                            </div>
                            <div class="col s1 offset-s1">
                                <span class="r2d-value">Scadenza:</span>
                            </div>
                            <div class="col s2">
                                <span class="r2d-value">@a.DataScadenza</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s1 offset-s1">
                                <span class="r2d-label">Note:</span>
                            </div>
                            <div class="col s2">
                                <span class="r2d-value">@a.Note</span>
                            </div>                      
                        </div>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="card">
            <div class="card-content">
                <span class="card-title center"><strong>Nessun certificato per l'utente</strong></span>
                <br />
                <p>Sembrerebbe che al momento l'utente non abbia presentatno nessun certificato.</p>
                <br />
                <a asp-action="AddCertificatoToUser" asp-controller="UtentiCliente" asp-route-userId="@Model.UserId" class="btn-floating halfway-fab waves-effect waves-light red">
                    <i class="material-icons">add</i>
                </a>
            </div>
            @*<div class="card-action">
                    <a href="#">This is a link</a>
                </div>*@
        </div>
    }
</div>
