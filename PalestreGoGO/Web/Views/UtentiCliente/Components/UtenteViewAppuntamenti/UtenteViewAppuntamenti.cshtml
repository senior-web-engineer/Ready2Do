@model UtenteViewAppuntamentiViewModel

<div id="viewAbbonamentiContainer" class="row">
    @if (Model != null && Model.Appuntamenti != null && Model.Appuntamenti.Count > 0)
    {
        <ul class="collapsible">
            @foreach (var item in Model.Appuntamenti)
            {
                <li>
                    <div class="collapsible-header">
                        <span class="r2d-value">Evento: @item.Nome</span>
                    </div>
                    <div class="collapsible-body">
                        <div class="row">
                            <div class="col s1 offset-s1">
                                <span class="r2d-label">Inizia il:</span>
                            </div>
                            <div class="col s2">
                                <span class="r2d-value">@item.DataOra</span>
                            </div>
                            <div class="col s1 offset-s1">
                                <span class="r2d-value">Prenotato il:</span>
                            </div>
                            <div class="col s2">
                                <span class="r2d-value">@item.DataOraIscrizione</span>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="card">
            <div class="card-content">
                <span class="card-title center"><strong>Nessun Appuntamenti per l'utente</strong></span>
                <br />
                <p>Al momento non risultano prenotazioni da parte dell'utente.</p>
                <br />
                @*<a asp-action="AddCertificatoToUser" asp-controller="UtentiCliente" asp-route-userId="@Model.UserId" class="btn-floating halfway-fab waves-effect waves-light red">
                    <i class="material-icons">add</i>
                </a>*@
            </div>
            @*<div class="card-action">
                    <a href="#">This is a link</a>
                </div>*@
        </div>
    }
</div>
